<h1>New post</h1>

<%= form_for @post do |f| %>
	<% if @post.errors.any? %>
		<div class="error_messages">
			<h2>Form is invalid</h2>
			<ul>
				<% @post.errors.full_messages.each do |message| %>
				<li><%=message %></li>
			<%end%>
			</ul>
		</div>
	<%end%>


<div class='field'>
	<%= f.label :title %><br>
	<%= f.text_field :title%>
</div>

<div class='field'>
	<%= f.label :question %><br>
	<%= f.text_field :question %>
</div>

<div class='actions'><%= f.submit %></div>
<%end%>